// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// "A upload job can have 0 or 1 s3 instance"
// `userId` is non-unique because a user can have multiple upload jobs
model UploadJob {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    String
  s3        s3?      @relation(fields: [s3Id], references: [id], onUpdate: Cascade)
  s3Id      Int?     @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  email     String      @unique
  name      String?
  password  String
  swings    Swing[]
  UploadJob UploadJob[]
}

model Swing {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  predictions Prediction[]
  imageUrl    String?
  blobId      String?
  userId      Int?
  user        User?        @relation(fields: [userId], references: [id])
  s3          s3?
}

model s3 {
  id          Int        @id @default(autoincrement())
  key         String     @unique
  createdAt   DateTime   @default(now())
  url         String
  swingId     Int?       @unique
  swing       Swing?     @relation(fields: [swingId], references: [id])
  uploadJob   UploadJob?
  uploadJobId Int?       @unique
}

model Prediction {
  id                      Int               @id @default(autoincrement())
  createdAt               DateTime          @default(now())
  swingId                 Int
  swing                   Swing             @relation(fields: [swingId], references: [id])
  url                     String
  replicate_prediction_id String
  predictionImages        PredictionImage[]
}

model PredictionImage {
  id           Int        @id @default(autoincrement())
  createdAt    DateTime   @default(now())
  url          String
  predictionId Int
  prediction   Prediction @relation(fields: [predictionId], references: [id])
}

model ReplicateWebhook {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  payload   Json
}

model Word {
  id         Int      @id @default(autoincrement())
  word       String
  definition String
  example    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  sourceId   Int
  source     Source   @relation(fields: [sourceId], references: [id])
}

model Source {
  id            Int       @id @default(autoincrement())
  url           String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastCrawledAt DateTime?
  objectId      String?   @unique
  words         Word[]
}
